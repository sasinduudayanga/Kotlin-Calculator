<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">


    <TextView
        android:id="@+id/calculatorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Calculator"
        android:textSize="24sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/displayTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:paddingBottom="10dp"
        android:textSize="24sp"
        tools:ignore="DuplicateIds"
        android:layout_below="@+id/calculatorTextView"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="end"
        android:layout_below="@id/displayTextView1"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayTextView"
        android:rowCount="6"
        android:columnCount="4"
        android:layout_marginLeft="25dp">

        <Button
            android:id="@+id/button0"
            android:layout_row="4"
            android:layout_column="0"
            android:text="0" />

        <Button
            android:id="@+id/button1"
            android:layout_row="1"
            android:layout_column="0"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="2"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            android:layout_row="3"
            android:layout_column="0"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_row="3"
            android:layout_column="1"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_row="3"
            android:layout_column="2"
            android:text="9" />
        <Button
            android:id="@+id/buttonDot"
            android:layout_row="5"
            android:layout_column="0"
            android:text="." />

<!--..................Operators...................-->
        <Button
            android:id="@+id/buttonPlus"
            android:layout_row="1"
            android:layout_column="3"
            android:text="+" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_row="2"
            android:layout_column="3"
            android:text="-" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_row="3"
            android:layout_column="3"
            android:text="*" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_row="4"
            android:layout_column="3"
            android:text="/" />


        <!-- Add buttons for numbers 0-9, operators (+, -, *, /), and equals (=) -->

        <Button
            android:id="@+id/equalsButton"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:text="=" />
        <Button
            android:id="@+id/buttonClear"
            android:layout_row="4"
            android:layout_column="1"
            android:text="C" />


    </GridLayout>

</RelativeLayout>
